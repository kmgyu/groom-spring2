<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="goorm.mybatisboard.auth.UserMapper">

    <!-- 공통 컬럼 리스트 -->
    <sql id="userColumns">
        id,
        email,
        password,
        nickname,
        created_at,
        updated_at
    </sql>

    <!-- 이메일로 조회 -->
    <select id="findByEmail" parameterType="string" resultType="goorm.mybatisboard.auth.User">
        SELECT
        <include refid="userColumns"/>
        FROM users
        WHERE email = #{email}
    </select>

    <!-- ID로 조회 -->
    <select id="findById" parameterType="long" resultType="goorm.mybatisboard.auth.User">
        SELECT
        <include refid="userColumns"/>
        FROM users
        WHERE id = #{id}
    </select>

    <!-- 이메일 존재 여부 -->
    <select id="existsByEmail" parameterType="string" resultType="boolean">
        SELECT CASE WHEN COUNT(*) > 0 THEN TRUE ELSE FALSE END
        FROM users
        WHERE email = #{email}
    </select>

    <!-- 삽입 -->
    <insert id="insert" parameterType="goorm.mybatisboard.auth.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO users (email, password, nickname, created_at, updated_at)
        VALUES (#{email}, #{password}, #{nickname}, NOW(), NOW())
    </insert>

    <!-- 업데이트 -->
    <update id="update" parameterType="goorm.mybatisboard.auth.User">
        UPDATE users
        SET
            email = #{email},
            password = #{password},
            nickname = #{nickname},
            updated_at = NOW()
        WHERE id = #{id}
    </update>

    <!-- 삭제 -->
    <delete id="deleteById" parameterType="long">
        DELETE FROM users WHERE id = #{id}
    </delete>

</mapper>
